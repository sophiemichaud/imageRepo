<div class="container-fluid px-0">

    <h1 class="welcome">Welcome to Picto Vault!</h1>

    <% if current_user %>
    You are logged with <%= current_user.email %>.
    <%= link_to "Log Out", 'logout', class: "nav-link" %>
    <% else %>
        <div class="welcome">
            <%= link_to "Sign Up", 'signup', class: "btn btn-outline-dark" %> or
            <%= link_to "Log In", 'login', class: "btn btn-outline-dark" %>
        </div>
    <% end %>
    </br>
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
    <ol class="carousel-indicators">
        <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"></li>
        <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"></li>
        <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"></li>
        <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3"></li>
        <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="4"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <div class="d-flex align-items-center justify-content-center min-vh-100 img-fluid">
                <%= image_tag('IMG_2757.JPG', class: "d-block w-100", alt: "Countryside in Collingwood") %>
            </div>
        </div>
        <div class="carousel-item">
            <div class="d-flex align-items-center justify-content-center min-vh-100">
                <%= image_tag('IMG_1207.jpg', class: "d-block w-100", alt: "Countryside in Collingwood") %>
            </div>
        </div>
        <div class="carousel-item">
            <div class="d-flex align-items-center justify-content-center min-vh-100">
                <%= image_tag('IMG_1352.jpg', class: "d-block w-100", alt: "Countryside in Collingwood") %>
            </div>
        </div>
        <div class="carousel-item">
            <div class="d-flex align-items-center justify-content-center min-vh-100">
                <%= image_tag('flowers.jpg', class: "d-block w-100", alt: "Countryside in Collingwood") %>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </a>
    </div>
</div>
